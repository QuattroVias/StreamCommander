body {
  font-family: Arial, sans-serif;
  background-color: #1e1e1e;
  color: white;
  margin: 0;
  padding: 0px;
  color: #fff;
}

.container {
  max-width: 870px;
  margin: 14px;
  --bs-gutter-x: 0rem;
}

h1, h2, h3 {
  color: #FFCF40;
  margin-bottom: 10px;
}

input[type="text"],
input[type="range"],
textarea {
  width: 100%;
  padding: 10px;
  margin-top: 5px;
  background: #2E2E2E;
  border: 1px solid #444;
  color: white;
  border-radius: 4px;
  font-size: 14px;
}

textarea {
  height: 400px;
  resize: none;
}

button {
  background-color: #FFCF40;
  color: black;
  padding: 10px 16px;
  border: none;
  margin-top: 8px;
  font-weight: bold;
  font-size: 14px;
  cursor: pointer;
  border-radius: 4px;
  transition: background 0.2s;
}

button:hover {
  background-color: #ffe680;
}

ul {
  list-style-type: none;
  padding-left: 0;
}

/* Стили для таблицы */
#queueTable {
  width: 100%;
  margin-top: 0px;
  border-collapse: collapse;
}

#queueTable th, #queueTable td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #444;
}

#queueTable th {
  background-color: #333;
}

#queueTable td {
  background-color: #2a2a2a;
  padding: 2px;
}

/* Стиль для текущего воспроизведения */
.row.playing {
  background-color: rgba(0, 255, 0, 0.2); /* тускло-зеленый */
  position: relative;
}

.row.playing::after {
  content: "▶️";
  font-size: 20px;
  color: green;
  position: absolute;
  top: 10px;
  left: 10px;
}

.row.playing .info .title {
  font-weight: bold;
}

.row.playing .info .duration,
.row.playing .info .customer {
  color: lightgreen;
}

/* Стилизация для картинок в очереди */
#queueTable td img {
  height: 60px; /* Фиксированная высота */
  width: auto; /* Автоматическая ширина для сохранения пропорций */
  object-fit: contain; /* Сохранение пропорций изображения */
  border-radius: 10px;
}

/* Стили для заголовков таблицы */
thead th {
  color: #FFCF40;
}

/* Стиль для строки таблицы при наведении */
#queueTable tbody tr:hover {
  background-color: #333;
}

#queueTable tbody tr:nth-child(odd) td {
  background-color: #2a2a2a;
}

#queueTable tbody tr:nth-child(even) td {
  background-color: #242424;
}






.playing {
  position: relative;
  overflow: hidden;
  border-left: 4px solid rgba(255, 207, 64, 0.8);
  border-radius: 12px;
  padding: 8px 12px;
  background: rgba(255, 207, 64, 0.15); /* Бледный стартовый цвет */
  z-index: 0;
}

.playing::before {
	content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;
    background: linear-gradient(90deg, rgba(255, 200, 60, 0.1), rgba(255, 207, 64, 0.1), rgba(255, 207, 64, 0.2), rgba(255, 207, 64, 0.8), rgba(255, 207, 64, 0.2), rgba(255, 207, 64, 0.1), rgba(255, 200, 60, 0.1));
    background-size: 1400%;
    animation: bgMove 3.5s linear infinite;
    opacity: 0.4;
}

@keyframes bgMove {
    0% {
        background-position: 100% 50%;
    }
    100% {
        background-position: 0% 50%;
    }
}

/* Текст внутри блока */
.playing span {
  color: white;
  font-weight: bold;
  text-shadow: 0 0 8px rgba(255, 207, 64, 0.85), 0 0 12px rgba(255, 207, 64, 0.5), 0 0 22px rgba(255, 207, 64, 0.7);
}

















/* Стили для ячеек с информацией */
.row .info {
  display: grid;
  grid-template-columns: 1fr 2fr; /* Два столбца: 1 для картинки, 2 для текста */
  gap: 10px;
}

.row .info .title {
  font-size: 14px;
  color: white;
}

.row .info .duration {
  font-size: 14px;
  color: gray;
}

.row .info .customer {
  font-size: 14px;
  color: lightgray;
}
